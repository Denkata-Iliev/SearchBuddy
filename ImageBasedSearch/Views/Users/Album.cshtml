@model IEnumerable<string>
@{
    ViewData["Title"] = "Album";
}

<form asp-action="Album"
      method="post"
      enctype="multipart/form-data"
      class="d-flex flex-column justify-content-center align-items-center gap-3"
      id="albumForm">
    <input type="file"
           name="images"
           required
           multiple
           class="form-control w-75"
           accept="image/jpg,
            image/jpeg,
            image/png,
            image/bmp,
            image/gif,
            image/jfif,
            image/webp,
            image/ico" />

    <button type="submit" class="btn btn-primary w-50">Upload</button>
</form>

<div class="container mt-4">
    <h2 class="text-center mb-4">Image Gallery</h2>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
        @foreach (var imageUrl in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <img src="~/@imageUrl" class="card-img-top" alt="Image">
                </div>
            </div>
        }
    </div>
</div>
